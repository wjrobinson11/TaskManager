<%= form_with(model: task, local: true, class: 'resource-form') do |form| %>
  <%- if task.errors %>
    <div class='error-field'>
      <%= task.errors.full_messages.join("<br />").html_safe %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <%- if current_user.super_admin? %>
    <div class="form-group">
      <%= form.label :company_id %>
      <%= form.select "company_id", Company.all.collect{|p| [ p.name, p.id ] }, {}, { class: 'form-control' } %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Submit", class: 'btn btn-primary resource-submit' %>
  </div>
<% end %>
