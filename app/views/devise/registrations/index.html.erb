<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to '+ New User', new_user_registration_path, class: 'new-resource-link' %>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Type</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.type %></td>
        <td><%= user.company.try(:name) %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <td><%= link_to 'Destroy', destroy_user_registration_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>