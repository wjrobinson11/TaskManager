<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<%= link_to '+ New Company', new_company_path, class: 'new-resource-link' %>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>TaskAdmins</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.task_admin_count %></td>
        <td><%= company.task_count %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'All Tasks and TaskAdmins associated with this Company will be destroyed. Are you sure you wan to do this?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

